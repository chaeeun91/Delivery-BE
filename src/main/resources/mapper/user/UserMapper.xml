<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.food.delivery.user.mapper.UserMapper">

    <!-- SELECT example -->
    <select id="findAll" resultType="com.food.delivery.user.dto.UserDTO">
        SELECT *
        FROM user;
    </select>

    <!-- INSERT example -->
    <insert id="insertUser" parameterType="com.food.delivery.user.dto.UserDTO">
        INSERT INTO users (
        username,
        email
        ) VALUES (
        #{username},
        #{email}
        );
    </insert>

</mapper>
